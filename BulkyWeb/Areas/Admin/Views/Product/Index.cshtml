@model List<Product>



<partial name="_Notification" />
<div class="card shadow border-0 mt-4 mb-5">
    <div class="card-header bg-secondary bg-gradient m-lg-0 p-5">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Product list</h2>
            </div>
        </div>

    </div>

    <div class="p-4 m-2 text-end">
        
        <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">CREATE NEW PRODUCT</a>
    </div>

    <div class="card-body p-4 mb-5">

        <table class="table table-bordered table-striped w-full">

            <thead>
                <tr>
                    <th>Title</th>
                    <th>ISBN</th>
                    <th>List price</th>
                    <th>Author</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Title</td>
                        <td>@obj.ISBN</td>
                        <td>@obj.ListPrice</td>
                        <td>@obj.Author</td>
                        
                        <td>
                            <div class="w-75 btn-group" role="group">
                                
                                    
                                    <a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">Edit</a>

                           
                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">Delete</a>

                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>