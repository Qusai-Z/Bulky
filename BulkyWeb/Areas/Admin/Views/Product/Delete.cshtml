@model Product

<div class="card shadow border-0 mt-4 mb-5">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4 mb-5">


        <form method="post" class="row">
            <input asp-for="Id" hidden />

            <div class="form-floating py-2 col-12">
                <input asp-for="Title" type="text" class="form-control border-0 shadow" disabled />
                <label class="ms-2">Title:</label>

            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Description" type="text" class="form-control border-0 shadow" disabled />
                <label class="ms-2">Description:</label>

            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="ISBN" type="text" class="form-control border-0 shadow" disabled />
                <label class="ms-2">ISBN:</label>
               
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Author" type="text" class="form-control border-0 shadow" disabled />
                <label class="ms-2">Author:</label>
               
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="ListPrice" type="text" class="form-control border-0 shadow" disabled />
                <label class="ms-2">List price:</label>
                
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Price" type="text" class="form-control border-0 shadow" disabled />
                <label class="ms-2">Price:</label>
               
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Price50" type="text" class="form-control border-0 shadow" disabled />
                <label class="ms-2">Price 50:</label>
               
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Price100" type="text" class="form-control border-0 shadow" disabled />
                <label class="ms-2">Price 100:</label>
               
            </div>


            <div class="row pt-2">
                <div class="col-6 col-md-3">

                    <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
                </div>
                <div class="col-6 col-md-3">

                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primaryborder border" style="width:150px">
                        Back
                    </a>
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
